{
  "manifest_version": 3,
  "name": "NeuroFlow Tracker",
  "version": "1.0",
  "description": "Track scroll behavior, tab usage, and focus time across websites.",
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "NeuroFlow Active"
  }
}